@model CustomerProject.Models.OrdersForCustomer

@{
    ViewBag.Title = "OrdersForCustomer";
}

<h2>Orders For Customer</h2>

<h3>Customer: @Model.Customer.Name</h3>

<table class="table">
    <tr>
        <th>Date</th>
        <th>Total</th>
    </tr>

@foreach (var item in Model.Orders) {
   <tr>
       <td>@item.Date</td>
       <td>@item.Total</td>
   </tr>
}

</table>
